'''
 Decorators
'''
def my_decorator(func):
    def wrapper(*args, **kwargs):
        print "Before Call"
        result = func(*args, **kwargs)
        print "After Call"
        return result
    return wrapper

@my_decorator
def add(a, b):
    return a+b
print add(2, 3)
print add(5,6)
@my_decorator
def sub(a,b):
    return a-b
print sub(9,22)
print add(22,16)
print add(33,55),
print sub(44,87)
print "=============="
@my_decorator
def zipper(a,b):
    return zip(a,b)
ll = zipper([1,3,5,2],['a','d','f','g'])
print ll
dd = {}
for i in ll:
    print i[0],i[1] 
    dd[i[0]]= i[1]
    dd.setdefault(i[0],[]).append(i[1])
print dd
