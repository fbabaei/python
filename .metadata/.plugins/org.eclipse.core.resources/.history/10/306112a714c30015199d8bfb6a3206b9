class zrange_iter():
    def __init__(self, n):
        self.n = n
        self.i = 0
    
    def __iter__(self):
        return self;

    def next(self):
        if self.i < self.n:
            i = self.i
            self.i += 1
            return i
        else:
            raise StopIteration()
class zrange:
    def __init__(self, n):
        self.n = n
    def __iter__(self):
        return zrange_iter(self.n)
'''
    generators 
'''
def yrange(n):
    i = 0
    while i < n: 
        yield i 
        i += 1  
# Generator Expressions ...
a = (x**2 for x in range(100) if x%2 != 0) 
print "the total number is:", sum(a)
def infint_generator(start=0):
    while True:
        yield start
        start += 1
for num in infint_generator(4):
    print num,
    if num > 20:
