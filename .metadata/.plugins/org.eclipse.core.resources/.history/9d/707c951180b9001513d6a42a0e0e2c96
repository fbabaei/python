logfile = "C:\Users\Fereydoun\workspace\projpy\common\oracle\logfile"
def mkdict(logfile):
    reportdict = {}
    with open (logfile) as f:
        for line in f:
            llist = line.split(' ')
            if llist[3] == 'drops':
                reportdict.setdefault(llist[2],[]).append(llist[4].rstrip())
    return reportdict
def report(indict={}):
    for k, v in indict.items():
        iplist = k.split('.')
        totaldrops = 0
        for i in v:
            totaldrops += int(i)  
        print "%s drops total %d packets" %(k, totaldrops)

if __name__ == '__main__':
    report(mkdict(logfile))