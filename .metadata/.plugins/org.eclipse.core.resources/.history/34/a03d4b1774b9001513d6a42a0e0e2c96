logfile = "C:\Users\Fereydoun\workspace\projpy\common\oracle\logfile"
def report(logfile):
    reportdict = {}
    with open (logfile) as f:
        for line in f:
            ipaddr = line.split(' ')
            reportdict.setdefault(ipaddr[2],[]).append(ipaddr[4].rstrip())
    return reportdict
def addsort(indict={}):
    for k, v in indict.items():
        iplist = k.split('.')
#         print v
#         print iplist
        totaldrops = 0
        for i in v:
            if i != 'full': 
#                 print int(i)
                totaldrops += int(i)  
        print "%s drops total %d packets" %(k, totaldrops)
                   
                  
    
        
if __name__ == '__main__':
    print report(logfile)
    addsort(report(logfile))