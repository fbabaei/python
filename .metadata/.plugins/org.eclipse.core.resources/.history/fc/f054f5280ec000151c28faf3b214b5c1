import os
import sys
import getopt
from os.path import *

directory = sys.argv[0]
def chkdirtree(directory):
    print directory
    directory = directory[0]
    print os.listdir(directory)
    for d in os.listdir(directory):
        if isdir(d):
            chkdirtree(d)
        elif isfile(d):
            print d
               
if __name__ == '__main__':
    chkdirtree(directory)