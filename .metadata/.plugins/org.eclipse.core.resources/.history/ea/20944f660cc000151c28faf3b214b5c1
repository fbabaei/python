import os
import sys
import getopt
from os.path import *

directory = sys.argv
print directory[0]
def chkdirtree(directory):
    s=os.listdir(directory)
    print s
    for d in s:
        if isdir(d):
            chkdirtree(d)
        elif isfile(d):
            print d
               
if __name__ == '__main__':
    chkdirtree(directory)